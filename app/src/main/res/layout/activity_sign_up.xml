<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <!--Header Layout-->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9ED7D9"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="NoThering"
            android:textSize="60sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:text="We are there for you...."
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="20dp"
            android:text="@string/signUpText"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/loginLink"
            android:textSize="20sp" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"/>

    <ScrollView
        android:id="@+id/userDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleLayout"
        android:background="#D1EEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:orientation="vertical">

            <!--Name Field-->
            <EditText
                android:id="@+id/userName"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--Email-->
            <EditText
                android:id="@+id/userEmail"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--Password-->
            <EditText
                android:id="@+id/userPassword"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--Confirm Password-->
            <EditText
                android:id="@+id/userConfirmPassword"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--DOB-->
            <EditText
                android:id="@+id/userDOB"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="DOB"
                android:inputType="date"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--Phone Number-->
            <EditText
                android:id="@+id/userPhoneNumber"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--State-->
            <EditText
                android:id="@+id/userState"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="State"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--City-->
            <EditText
                android:id="@+id/userCity"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="City"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--Street-->
            <EditText
                android:id="@+id/userStreet"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="Street"
                android:inputType="textPostalAddress"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <!--Aadhar ID-->
            <EditText
                android:id="@+id/userAadharId"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="13dp"
                android:background="#fff"
                android:hint="Aadhar ID"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="#9ED7D9"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/signUpUser"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/nextbtn"/>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>